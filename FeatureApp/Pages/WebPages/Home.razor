@page "/home"
@using AKSoftware.Localization.MultiLanguages;
@using FeatureApp.Pages.WebPages
@inject ILanguageContainerService languageContainer
<section class="home" id="home">
    <div class="home__container container grid">
        <div class="home__img-bg">
            <img src="assets/img/home.png" alt="" class="home__img">
        </div>

        @*  <div class="home__social">
        <a href="https://www.facebook.com/" target="_blank" class="home__social-link">
        Facebook
        </a>
        <a href="https://twitter.com/" target="_blank" class="home__social-link">
        Twitter
        </a>
        <a href="https://www.instagram.com/" target="_blank" class="home__social-link">
        Instagram
        </a>
        </div>*@

        <div class="home__data">
            <h1 class="home__title"> @languageContainer.Keys["Collection"]</h1>
            <p class="home__description">
                @languageContainer.Keys["CollectionDescription"]
            </p>
            <span class="home__price">$1245</span>

            <div class="home__btns">
                <a href="#" class="button button--gray button--small">
                    @languageContainer.Keys["Discover"]
                </a>

                <button class="button home__button">  @languageContainer.Keys["Cart"]</button>
            </div>
        </div>
    </div>
</section>

@code
{
    protected override async Task OnInitializedAsync()
    {
        try
        {
            languageContainer.InitLocalizedComponent(this);
        }
        catch (Exception)
        {

            throw;
        }
    }
}