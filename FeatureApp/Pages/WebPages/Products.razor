@page "/products"
@using AKSoftware.Localization.MultiLanguages;
@inject ILanguageContainerService languageContainer

 <!--==================== PRODUCTS ====================-->
<section class="products section container" id="products">
    <h2 class="section__title">
        @languageContainer.Keys["Products"]
    </h2>

    <div class="products__container grid">
        <article class="products__card">
            <img src="assets/img/product1.png" alt="" class="products__img">

            <h3 class="products__title"> @languageContainer.Keys["Spiritrose"]</h3>
            <span class="products__price">$1500</span>

            <button class="products__button">
                <i class='bx bx-shopping-bag'></i>
            </button>
        </article>

        <article class="products__card">
            <img src="assets/img/product2.png" alt="" class="products__img">

            <h3 class="products__title"> @languageContainer.Keys["Khakipilot"]</h3>
            <span class="products__price">$1350</span>

            <button class="products__button">
                <i class='bx bx-shopping-bag'></i>
            </button>
        </article>

        <article class="products__card">
            <img src="assets/img/product3.png" alt="" class="products__img">

            <h3 class="products__title">@languageContainer.Keys["Jubileeblack"]</h3>
            <span class="products__price">$870</span>

            <button class="products__button">
                <i class='bx bx-shopping-bag'></i>
            </button>
        </article>

        <article class="products__card">
            <img src="assets/img/product4.png" alt="" class="products__img">

            <h3 class="products__title">@languageContainer.Keys["Fosilme3"]</h3>
            <span class="products__price">$650</span>

            <button class="products__button">
                <i class='bx bx-shopping-bag'></i>
            </button>
        </article>

        <article class="products__card">
            <img src="assets/img/product5.png" alt="" class="products__img">

            <h3 class="products__title">@languageContainer.Keys["Duchen"]</h3>
            <span class="products__price">$950</span>

            <button class="products__button">
                <i class='bx bx-shopping-bag'></i>
            </button>
        </article>
    </div>
</section>
@code
{
    protected override async Task OnInitializedAsync()
    {
        try
        {
            languageContainer.InitLocalizedComponent(this);
        }
        catch (Exception)
        {

            throw;
        }
    }
}